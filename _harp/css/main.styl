body
  font-family: helvetica
  margin: 0
.container
  display: flex
  flex-grow: 3
  justify-content: space-around
.container-hero
  width: 500px
  margin-top: 300px
.hero-text
  text-align: center
  color: #fff
  font-style: normal
  letter-spacing: normal
  line-height: normal
.hero-text h1
  font-size: 140px
  text-transform: uppercase
  font-weight: bold
  line-height: 90px
  margin: 0
.hero-text h2
  font-size: 17px
  text-transform: uppercase
  font-weight: normal
  letter-spacing: 11px
  color: #e3443e
.hero-text p
  font-size: 19px
  font-weight: normal
  margin: 40px 0 40px 0
  line-height: 25px
  color: #428abb
.symbol
  width: 200px
.logo
  width: 200px
.team-container
  background: #fff
  margin: 400px 0 0 0
.container-about
  width: 600px
.about-hero
  display: flex
.about-text
  padding: 50px 0 0 20px
h3
  text-align: center
  font-size: 64px
  font-weight: bold
  color: #3a3a3c
.footer
  background: #3a3a3c
  color: #fff
  display: flex
  flex-direction: column
  h3
    color: #fff
